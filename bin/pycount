#!/usr/bin/env python
#-*- coding: utf-8 -*-

from __future__ import print_function

from pycount.pycount import Counter

import sys

if __name__ == "__main__":
    if len(sys.argv) is 2:
        COUNTER = Counter(sys.argv[1])
    else:
        COUNTER = Counter()
    runtime1 = COUNTER.discover()
    runtime2 = COUNTER.count()
    runtime3 = COUNTER.report()
    if COUNTER.results:
        print("{0:1} {1:23.2f}".format("RUNTIME (sec)", runtime1 + runtime2 +
                                       runtime3))
        print("-" * 37)
