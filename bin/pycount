#!/usr/bin/env python
#-*- coding: utf-8 -*-

import sys

from pycount.core import Counter


if __name__ == "__main__":
    if len(sys.argv) > 2:
        COUNTER = Counter(sys.argv[1:])
    elif len(sys.argv) == 2:
        COUNTER = Counter(sys.argv[1])
    else:    
        COUNTER = Counter('.')
    COUNTER.discover()
    COUNTER.count()
    COUNTER.report()
